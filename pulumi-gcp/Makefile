	echo "                               $(__SITM)that pulumi changes are being applied to)$(__RESET)"; \
	echo "$(__MAGENTA)<GCP_PREFIX>                   $(__GREEN)󰾺$(__RESET) Prefix to use in some other GCP-related variables"; \
