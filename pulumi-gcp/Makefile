# apply: validate _check-ws ## Set course and full speed ahead! ⛵ This will cost you! 💰
apply: _check-ws ## Set course and full speed ahead! ⛵ This will cost you! 💰
	@# hide target content
	$(call tf,apply,$(__PLCONF_PATH),$(PL_ARGS))

